{
  "manifest_version": 3,
  "name": "SharePoint Link Checker",
  "version": "1.0.0",
  "description": "A minimal SharePoint link checker extension with Fluent UI design",
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.sharepoint.com/*",
    "*://*.sharepoint-df.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_title": "SharePoint Link Checker"
  },
  "side_panel": {
    "preferred_width": 600,
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
